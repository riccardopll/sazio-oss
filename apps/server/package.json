{
  "name": "@sazio-oss/server",
  "private": true,
  "type": "module",
  "scripts": {
    "cf:deploy": "wrangler deploy",
    "db:migrate": "drizzle-kit generate && wrangler d1 migrations apply sazio-oss-db --remote",
    "db:migrate:local": "drizzle-kit generate && wrangler d1 migrations apply sazio-oss-db",
    "db:studio": "drizzle-kit studio",
    "db:studio:local": "drizzle-kit studio --config drizzle.config.local.ts",
    "dev": "wrangler dev",
    "lint": "prettier . --write && pnpx sort-package-json",
    "test": "vitest --run"
  },
  "dependencies": {
    "@clerk/backend": "^2.29.2",
    "@sazio-oss/api": "workspace:*",
    "better-sqlite3": "^12.6.2",
    "dotenv": "^17.2.3",
    "hono": "^4.11.3"
  },
  "devDependencies": {
    "@cloudflare/vitest-pool-workers": "^0.12.1",
    "@cloudflare/workers-types": "^4.20260109.0",
    "drizzle-kit": "^0.31.8",
    "vitest": "^3.2.4"
  }
}
